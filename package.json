{
  "name": "cavabien",
  "version": "1.3.0",
  "description": "CLI tool for project management using todos, checklists, tasks and roadmaps",
  "main": "./lib/index.js",
  "bin": {
    "cavabien": "./bin/cavabien"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && cavabien",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arunabhdas/cyborg.git"
  },
  "keywords": [
    "typescript",
    "cli"
  ],
  "author": "Arunabh Das",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/arunabhdas/cyborg/issues"
  },
  "homepage": "https://github.com/arunabhdas/cyborg#readme",
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
    "@types/figlet": "^1.5.4",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^17.0.0",
    "ts-node": "^10.4.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "inquirer": "^8.2.0"
  }
}
